<% content_for :horizontal_status do %>
  <%= render :partial => 'insured/families/horizontal_status.html.erb', locals: {step: 2} %>
<% end %>
<div class="container group-selection">
  <div class="row">
    <div class="col-xs-8">
      <h1 class="darkblue"><%= l10n("insured.group_selection.new.choose_coverage_for_your_household") %></h1>
      <p class="twenty">Select who needs coverage and the type of coverage needed. When youâ€™re finished, select CONTINUE.</p>
      <table class="col-md-12">
        <tbody>
          <tr style="padding: 2px;">
            <td style="padding: 2px;">
             <%= radio_button_tag('eligible_continue', 'yes', false, 'data-href': eligible_coverage_selection_insured_members_selections_path(@mini_context.to_h))%>
              <%= label_tag("eligible_continue", "Yes") %>
            </td>
          </tr>
          <tr>
            <td style="padding: 2px;">
            <%= radio_button_tag('eligible_continue', 'no', false, 'data-href': thankyou_insured_product_shoppings_path(@context.cart))%>
              <%= label_tag("eligible_continue", "No") %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-xs-3 right-section pull-right">
      <% if @mini_context[:change_plan].blank? %>
        <%= render  partial: 'shared/product_shoppings/signup_progress', locals: {step: '5'} %>
      <% elsif @mini_context[:change_plan] == "change_by_qle" %>
        <%= render partial: 'shared/qle_progress', locals: {step: '2',show_button:false} %>
      <% elsif @mini_context[:change_plan] == "change_plan" %>
        <%= render partial: 'shared/product_shoppings/shop_for_plans_progress', locals: {step: '1', eligible_continue: true} %>
      <% end %>
    </div>
  </div>
</div>