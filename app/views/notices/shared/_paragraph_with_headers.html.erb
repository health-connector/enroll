<div style="display:block; page-break-inside: avoid;">
  <table class="total_table" border="0">
    <tbody>
      <% if heading.present? %>
      <tr>
        <td><h2 style="color:rgb(54,95,145); font-size: 14px; font-weight: bold;"><%= heading.html_safe %></h2></td>
      </tr>
    <% end %>
      <% if sub_heading.present? %>
      <tr>
        <td><h3 style="color:black;"><%= sub_heading.html_safe %></h3></td>
      </tr>
      <% end %>
      <% if contents.present? %>
      <% contents.each do |para| %>
      <tr>
        <td class="notice-font"><%= para.html_safe %></td>
      </tr>
      <% end %>
        <% end %>
    </tbody>
  </table>
</div>
