<div class="row form-inline">
		<div class="form-group col-sm-3"><%= l10n('dob') %>:
		<%date_class  = readonly ? "" : 'uidatepicker'%>
		<%= qm.text_field :dob , {:class => "#{date_class}", placeholder: l10n('date_of_birth') '('l10n('dob')')' , readonly: readonly} %>
			
		</div>
		<div class="form-group col-sm-5"><%= l10n("name") %>:
		 <%= qm.text_field :first_name, {size: 20, placeholder: l10n('first_name'), readonly: readonly}%>
		 &nbsp;
		 <%= qm.text_field :last_name, {size: 20, placeholder: l10n('last_name'), readonly: readonly}%></div>
		<div class="form-group col-sm-3">
		<%= qm.select(:employee_relationship, [['Employee','employee'], ['Spouse','spouse'], ['Domestic partner','domestic_partner'],['Child','child_under_26']], {}, {:class => "floatlabel custom_selectric form-control", readonly: readonly})  %>
			
		</div>
		<div class="form-group col-sm-1"><button type="button" data-household-id="<%=qhh.object.id%>" data-quote-id="<%=@quote.id%>" data-member-id="<%=qm.object.id%>" data-broker-role-id="<%=@broker.id%>" id="remove_member_button"  class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
</div>