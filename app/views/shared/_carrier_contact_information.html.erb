<div class="modal fade carrier-contact" id="<%= plan.coverage_kind %>-<%= plan.id %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal" type="button">&times;</button>
        <h4 class="modal-title"><%= plan.carrier_profile.legal_name %>
          Customer Service Line</h4>
      </div>
      <div class="modal-body">
        <i class="fa fa-phone fa-3x"></i>
        <% if plan.coverage_kind == 'health' %>
          <div class="carrier-numbers">
            <% if plan.carrier_profile.legal_name == "BMC HealthNet Plan" %>
              <div>
                <strong> Call: </strong>
                <strong><a href="tel:+18558338120"> 1-855-833-8120 </a></strong> <br>
                <strong> TTY: </strong> 711 TTY <br>
                <strong>Hours: </strong>
                  Monday through Friday from 8:00 a.m. to 6:00 p.m. Eastern Time
                <br>
                <strong> Email: </strong> memberquestions@bmchp.org <br/>
              </div>
            <% elsif plan.carrier_profile.legal_name == "Fallon Health" %>
              <div>
                <strong> Call: </strong>
                <strong><a href="tel:+18008685200"> 1-800-868-5200 </a></strong> <br>
                <strong> TTY: </strong> Please call TRS Relay 711  <br>
                <strong> Hours: </strong> Monday, Tuesday, Thursday, and Friday from 8:00 a.m. to 6:00 p.m. Eastern Time, and Wednesday from 10:00 a.m. to 6:00 p.m. Eastern Time <br>
                <strong> Email: </strong> FCHPcustomerservice@fallonhealth.org <br/>
              </div>
            <% elsif plan.carrier_profile.legal_name == "Health New England" %>
              <div>
                <strong> Call: </strong>
                <strong> Local: </strong> <a href="tel:+14137874004"> 1-413-787-4004 </a> <br>
                <strong> Toll-free: </strong> <a href="tel:+18003102835"> 1-800-310-2835 </a> <br>
                <strong> TTY/TDD: </strong> <a href="tel:+18004392370"> 1-800-439-2370 </a> <br>
                <strong> Hours: </strong> Monday through Friday, 8:00 a.m. to 6:00 p.m. Eastern Time <br>
                <strong> Email: </strong> memberservices@hne.com <br/>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
