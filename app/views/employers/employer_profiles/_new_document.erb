<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>

  <div class="upload-preview">

  </div>
  <%= form_tag '/employers/employer_attestations',  multipart: true , class: "upload_document", method: 'post' do %>
      <%= file_field_tag :file, :accept => 'application/pdf' %>
      <%= hidden_field_tag :id, @employer_profile.id %>
      <%= label_tag :file, l10n('select_file_upload'), class: 'select btn btn-primary ' %>

      <div class="radio">
        <label><%= radio_button_tag :subject, 'Employee Attestation'%> <b style="margin-left: 25px"><%= l10n('er_attestations') %> </b></label>
      </div>
      <%= submit_tag l10n('upload'), class: 'btn btn-primary ' %>
  <% end %>
</div>