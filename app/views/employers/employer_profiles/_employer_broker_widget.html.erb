<% broker_and_agency_present = true if @employer_profile.broker_agency_profile.present? && @broker_agency_accounts[0].writing_agent.present? %>
<div class="panel panel-default module employer-broker-widget <%= pundit_class EmployerProfile, :updateable? %>">
  <div class="panel-heading">
    <h3 class="panel-title">
      <strong>
        <% if broker_and_agency_present %>
        <%= l10n('your_br') %>
        <% else %>
        <%= l10n('select_br') %>
        <% end %>
      </strong>
    </h3>
  </div>
  <div class="panel-body">
    <div class="text-center">
      <i aria-hidden="true" class="fa fa-user fa-3x"></i>
      <% if broker_and_agency_present %>
      <br/>
      <%= @employer_profile.broker_agency_profile.legal_name.titleize %>
      <% else %>
      <br/>
      <%= l10n('no_br') %>
      <% end %>
    </div>
    <div class="text-left">
      <% if broker_and_agency_present %>
      <div class="broker-information">
        <% active_broker = @broker_agency_accounts[0].writing_agent %>
        <%= active_broker.person.full_name.titleize %>
        <br/>
        <a href="tel:1-<%= active_broker.phone %>">1
          <%= active_broker.phone.to_s if active_broker.phone.present? %></a>
        <br/>
        <%= mail_to active_broker.email.address, active_broker.email.address %>
      </div>
      <% else %>
      <%= link_to l10n('add_br'), employers_employer_profile_path(@employer_profile.id, :tab=>'brokers'), "aria-expanded" => "true", class: "btn btn-default center-block" %>
      <small>
        <%= link_to l10n('insured.what_is_a_broker?'), '', data: { target: '#read_only_modal_what_is_a_broker', toggle: 'modal' } %>
      </small>
      <%= render partial: 'shared/modals/read_only_modal', locals: { modal_id: 'what_is_a_broker', header_icon: "<i class='fa fa-life-ring' aria-hidden='true'></i>", title: "What is a broker?", body: l10n('employers.employer_profiles.er_br_widget_msg') } %>
      <% end %>
    </div>
  </div>
</div>
