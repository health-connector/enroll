<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>
  <h2><%= l10n("upload_employee_roster")%>s</h2>
  <h4><%= l10n("broker_agencies.quotes.template_upload")%></h4>
  <%= link_to(document_download_path(env_bucket_name("templates"), aca_shop_market_census_employees_template_file) + "?contenttype=application/vnd.ms-excel&filename=#{aca_shop_market_census_employees_template_file}.xlsx", class: "download") do %>
  <h4><%= l10n('broker_agencies.quotes.need_the_template') %> <i class="fa fa-arrow-circle-o-down fa-lg"></i>
        <%= l10n('broker_agencies.quotes.download_it_now') %>
    <% end %>
        </h4>
  <div class="upload-preview">

  </div>
<%= form_for @employer_profile, :url => url_for(:controller => 'employer_profiles', :action => 'bulk_employee_upload'), method: 'post', :html => { :multipart => true } do |f| %>
<%= file_field_tag :file %>
<%=pundit_span EmployerProfile, :updateable? %>
<%= label_tag :file, l10n('select_file_upload'), class: 'select btn btn-primary ' %>
<%= f.submit l10n("upload"), class: 'btn btn-primary ' %>
<% end %>
</div>