<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <p><%= l10n('employers.people.click_for_help') %></p>
  </div>
</div>
<% Array(@person).each do |person| %>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="notification-error-wrapper">
      <%= form_for(person, :url => employers_people_path, :as => :person, :method => :post, :remote => true) do |f| %>
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <dl class="dl-horizontal">
              <dt><%= l10n('first_name') %></dt>
              <dd>
                <%= person.first_name %>
              </dd>
              <dt><%= l10n('last_name') %></dt>
              <dd>
                <%= person.last_name %>
              </dd>
              <dt><%= l10n('ssn') %></dt>
              <dd>
                <%= person.ssn %>
              </dd>
              <dt><%= l10n('dob').to_s.camelcase %></dt>
              <dd>
                <%= person.dob %>
              </dd>
            </dl>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-12">
            &nbsp;
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12">
            <%= f.submit l10n('employers.people.my_info'), :class => "btn btn-primary pull-right" %>
            <%= f.hidden_field :first_name %>
            <%= f.hidden_field :last_name %>
            <%= f.hidden_field :ssn %>
            <%= f.hidden_field :dob %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
