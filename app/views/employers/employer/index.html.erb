<h3><%= l10n('employers') %></h3>

<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= l10n('name') %></th>
      <th><%= l10n('fein') %></th>
      <th><%= l10n('type') %></th>
    </tr>
  </thead>
  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= link_to employer.legal_name, employers_employer_path(employer) %></td>
        <td><%= employer.fein %></td>
        <td><%= employer.entity_kind %></td>
       </tr>
    <% end %>
  </tbody>
</table>