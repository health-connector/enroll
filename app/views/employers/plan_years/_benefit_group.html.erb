<div class="row">
  <div id="scroll_container" class="col-xs-12">
    <div>
      <label class="plan-offerings"><%= l10n('pl_offering') %> - <%= render_plan_offerings(@benefit_group, @coverage_type) %></label>
    </div>
    <div>
      <label><%= l10n('er_low_ref_high') %> - <%= number_to_currency(@benefit_group_costs[:lowest_plan_employer_cost]) %>/<%= number_to_currency(@benefit_group_costs[:ref_plan_employer_cost]) %>/<%= number_to_currency(@benefit_group_costs[:highest_plan_employer_cost]) %></label>
    </div>

    <table class="table table-bg-white table-employee-2">
      <thead>
        <tr>
          <th class="text-center"><%= l10n('ee') %></th>
          <th class="text-center"><%= l10n('dep_count') %></th>
          <% if !@benefit_group.single_plan_type? || @coverage_type == '.dental' %>
          <th class="text-right"><%= l10n('employers.plan_years.low_cst_plan') %></th>
          <% end %>
          <th class="text-right"><%= l10n('reference_plan') %></th>
          <% if !@benefit_group.single_plan_type? || @coverage_type == '.dental'%>
          <th class="text-right"><%= l10n('employers.plan_years.high_cst_plan') %></th>
          <% end %>
        </tr>
      </thead>
      <tbody id="employee_index_scroll">
        <% if @employer_profile.census_employees.active.any? %>
          <%= render 'employee_costs' %>
        <% else %>
        <tr> <td> <%= l10n('no_ee_enrolled') %></td></tr>
        <% end %>
      </tbody>
    </table>
