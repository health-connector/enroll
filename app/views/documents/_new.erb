<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>

  <div class="upload-preview">

  </div>
  <%= form_for @document, :url => url_for(:controller => 'documents', :action => 'create'), method: 'post', :html => { :multipart => true } do |f| %>
      <%= file_field_tag :file %>
      <%= label_tag :file, 'Select File To Upload', class: 'select btn btn-primary ' %>
      <%= f.submit 'Upload', class: 'btn btn-primary ' %>
  <% end %>
</div>