<div class="container">
  <h1 class="mt-3"><b><%= l10n("exchange.employer_applications.confirmation_page")%></b></h1>
  <table class="confirmation-status-table">
    <tr>
      <td><h4><%= l10n("exchange.employer_applications.current_status")%></h4></td>
      <td><%= @result[:current_status] %></td>
    </tr>
    <tr>
      <td><h4><%= l10n("exchange.employer_applications.reinstated_on")%></h4></td>
      <td><%= @result[:reinstated_on] %></td>
    </tr>
    <tr>
      <td><h4><%= l10n("exchange.employer_applications.reinstate.coverage_period")%></h4></td>
      <td><%= @result[:coverage_period].min%> - <%= @result[:coverage_period].max%></td>
    </tr>
    <tr>
      <td><h4><%= l10n("exchange.employer_applications.reinstate.employees_updated")%></h4></td>
      <td><%= @result[:employees_updated] %></td>
    </tr>
    <tr>
      <td><h4><%= l10n("exchange.employer_applications.reinstate.employees_not_updated")%></h4></td>
      <td><%= @result[:employees_not_updated] %></td>
    </tr>
  </table>

  <h3 class="mt-3"><b><%= l10n("exchange.employer_applications.employee_details")%></b></h3>

  <table style='width: 70%;'>
    <thead class="thead-light">
      <th style='width: 30%; height: 40px; padding: 10px'><%= l10n("exchange.employer_applications.reinstate.employee_name")%></th>
      <th style='width: 40%'><%= l10n("exchange.employer_applications.reinstate.employee_status")%></th>
      <th style='width: 30%'><%= l10n("exchange.employer_applications.reinstate.error_details")%></th>
    </thead>
    <tbody>
      <% @result[:employee_details].each do |employee| %>
        <tr style='border-bottom: 1px solid #d1d1d1;'>
          <td style='padding: 10px'><%= employee[:employee_name].titleize %></td>
          <td><%= employee[:status] %> - <%= employee[:coverage_reinstated_on] %></td>
          <td><%= employee[:error_details] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
