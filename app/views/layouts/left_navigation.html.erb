<% content_for :content_wrapper do %>
  <div class="row">
    <!-- Navigation Column -->
    <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2 sidebar">
      <div class="left_navigation" role="navigation" aria-label="main navigation">
        <%#= yield(:navigation) if content_for?(:navigation) %>
        <%= yield(:navigation) %>
      </div>
    </div>

    <!-- Content Column -->
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
      <div class="flash_message"><%= flash_messages %></div>
      <div class="breadcrumbs"><%= yield(:breadcrumbs) if content_for?(:breadcrumbs) %></div>
      <div class="horizontal_status"><%= yield(:horizontal_status) if content_for?(:horizontal_status) %></div>

      <%= yield(:content) if content_for?(:content) %>
    </div>
  </div>
<% end %>

<% content_for :two_column_layout do %>
  <div aria-label="home-tab" id="home" class="tab-pane fade in active" role="tabpanel">
    <div class="container" style="margin-top: 20px;">
     <div class="row">
      <div class="col-md-2">
        <%= yield :navigation %>
      </div>
      <div class="col-md-10">
        <div class="col-xs-12 notice">
          <div class="flash_message"><%= flash_messages %></div>
        </div>
        <%= yield %>
      </div>

    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>
