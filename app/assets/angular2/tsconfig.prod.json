{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir" : "dist-aot",
    "baseUrl" : "",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module" : "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks" : true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include" : [  "./app/**/*", "./incremental.prod.ts", "./polyfills.ts"],
  "angularCompilerOptions": {
	  "genDir": "aot",
	  "skipMetadataEmit" : true
  }
}
