html {
  position: relative;
  min-height: 100%;
}

body {
  /* Margin bottom by footer height */
  margin-bottom: 40px;
  font-family: $font-family-base;
}

// Headings
// -------------------------

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: $headings-font-family;
  font-weight: $headings-font-weight;
  line-height: $headings-line-height;
  color: $headings-color;
  }

.navbar {
  // margin-bottom: 0;
  border-bottom: solid 3px $primary-blue;
  .navbar-header {
    .navbar-brand {
      border-right: solid 1px $gray-light;
      min-height: 70px;
      img {
        max-height: 45px;
      }
    }
  }

  .navbar-collapse {
    .header-text {
      color: $gray-dark;
      font-size: 14px;
      text-transform: uppercase;
      font-weight: bold;
    }
    .navbar-nav:first-of-type {
      a.portal {
        text-align: center;
        vertical-align: middle;
        line-height: 50px;
        padding: 23px 15px;
        font-weight: bold;
        &:hover {
          background-color: $gray-light;
          text-decoration: none;
        }
      }
    }
    .navbar-right {
      text-align: center;
      li:last-of-type {
      }
      a.call-customer-service {
        span:first-of-type {}
        span:last-of-type {
          .fa {
            color: $primary-blue;
          }
        }
      }
      .my-portal-links {
        min-height: 70px;
        padding: 15px 15px;
        display: block;
        border-left: solid 1px $gray-light;
        .users-name {
        }
      }
    }
  }
}


footer.footer-wrapper {
  /* Sticky footer */
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 40px;
  padding: 10px 10px;

  background-color: $primary-blue;
  color: $primary-white;
  a {
    color: $primary-white;
    &:hover {
        text-decoration: underline;
      }
  }
}


